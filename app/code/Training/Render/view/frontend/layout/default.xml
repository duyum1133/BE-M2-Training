<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="content.top">
            <block class="Magento\Framework\View\Element\Template" name="custom.default.content" template="Training_Render::custom-default.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">#87cefa</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Template" name="custom.link" template="Training_Render::link.phtml" after="-"/>
        </referenceBlock>

        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="custom.link" before="-">
                <arguments>
                    <argument name="label" xsi:type="string">Custom Page</argument>
                    <argument name="path" xsi:type="string">training_render/layout/onepage</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
